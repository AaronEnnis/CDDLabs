#include "Semaphore.h"
#include <iostream>
#include <thread>

void taskOne(std::shared_ptr<Semaphore> firstSem,std::shared_ptr<Semaphore>  secondSem){
  std::cout <<"I ";
  std::cout << "must ";
  secondSem->Signal();
  firstSem->Wait();
  std::cout << "print ";
  std::cout << "first"<<std::endl;
  secondSem->Signal();
}
void taskTwo(std::shared_ptr<Semaphore> firstSem, std::shared_ptr<Semaphore> secondSem){
  secondSem->Wait();
  std::cout <<"This ";
  std::cout << "will ";
  firstSem->Signal();
  secondSem->Wait();
  std::cout << "appear ";
  std::cout << "second"<<std::endl;
}

int main(void){

  return 0;
}
